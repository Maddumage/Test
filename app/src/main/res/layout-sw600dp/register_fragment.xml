<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reg_fragment"
    android:weightSum="1"
    android:gravity="center_horizontal">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_layout_name"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:drawableRight="@drawable/ic_action_person_light"
            android:inputType="textPersonName"
            android:id="@+id/input_name" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_layout_dob"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dob"
            android:focusable="false"
            android:inputType="datetime"
            android:id="@+id/input_dob"
            android:drawableRight="@drawable/ic_action_today"
            android:singleLine="true"
            android:editable="false"
            android:clickable="false" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/input_layout_address"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:drawableRight="@drawable/ic_action_markunread_mailbox"
            android:inputType="textPostalAddress"
            android:id="@+id/input_address" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/input_layout_contact"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contact"
            android:inputType="number"
            android:id="@+id/input_contact"
            android:drawableRight="@drawable/ic_action_contact_phone"
            android:singleLine="true"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/input_layout_email"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_action_contact_mail"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:id="@+id/input_email"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="@string/register"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:layout_marginTop="100dp"
        tools:ignore="RtlHardcoded"
        android:layout_weight="0.06"
        android:background="@drawable/round_button"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>